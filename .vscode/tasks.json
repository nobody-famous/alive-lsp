{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Tests",
            "type": "shell",
            "command": "sbcl",
            "args": [
                "--non-interactive",
                "--load",
                "alive-lsp.asd",
                "--eval",
                "'(ql:quickload :fiveam)'",
                "--load",
                "test/suite.lisp",
                "--eval",
                "'(fiveam:run!)'"
            ],
            "problemMatcher": []
        },
        {
            "label": "Watch Tests",
            "type": "shell",
            "command": "nodemon",
            "args": [
                "-e",
                "lisp",
                "--exec",
                "./run-tests.sh"
            ],
            "problemMatcher": []
        }
    ]
}